[
  {
    "bindings": {
      "shift-escape": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "`": "workspace::ToggleBottomDock",
      "ยง": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "`": "workspace::ToggleBottomDock",
      "ยง": "workspace::ToggleBottomDock",
      "g e": "vim::EndOfDocument",
      "g h": "vim::FirstNonWhitespace",
      "g l": "vim::EndOfLine",
      "%": "editor::SelectAll",
      "space d": "editor::GoToDiagnostic"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-u": "vim::Redo",
      ">": "vim::Indent",
      "<": "vim::Outdent"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "g A": "vim::VisualInsertEndOfLine",
      "shift-j": "vim::JoinLines",
      "r": "vim::PushReplace",
      "ctrl-c": ["editor::ToggleComments", { "advance_downwards": false }]
    }
  }
]
